<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llMenu">

        <RelativeLayout
            android:background="@color/colorOrange"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="50sp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rlGoalBtn"
                android:onClick="showMyGoalsMethod">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/menu_mygoal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorGreen"></LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:background="@color/colorOrange"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="50sp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rlRecordsBtn"
                android:onClick="showMyRecordsMethod">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/menu_myrecords"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorOrange"></LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:background="@color/colorOrange"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="50sp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rlOptionsBtn"
                android:onClick="showMyOptionsMethod">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/menu_myoptions"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    android:background="@color/colorOrange"
                    android:layout_alignParentBottom="true"></LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <!--<FrameLayout-->
        <!--android:id="@+id/frgmCont"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_below="@+id/llMenu">-->
    <!--</FrameLayout>-->

    <ExpandableListView
        android:id="@+id/exListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llMenu"
        android:groupIndicator="@color/colorPrimary"
        android:transcriptMode="alwaysScroll"
        />

</RelativeLayout>