<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/clr_sport"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:text="новый рекорд" />

        <TextView
            android:id="@+id/descrRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_margin="5sp"
            android:textSize="15sp"
            android:text="Выбрав это мы поможем тебе поставить новый рекорд твоей цели. Тебе нужно будет записать: дистанцию, текущею скорость и твою цель в секундах. Вперед!"/>

        <Button
            android:id="@+id/newRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:background="@color/clr_main"
            android:text="выбрать" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3sp"
        android:layout_marginTop="3sp"
        android:layout_marginBottom="3sp"
        android:background="@color/colorBlack"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/clr_sport"
            android:text="регулярная атака"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/descrRA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:text="Выбрав это мы поможем добиться твоей ругулярности, для этого запиши дистанцию которую хочешь преодалевать каждый день и вперед!"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />

        <Button
            android:id="@+id/regularAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/clr_main"
            android:text="выбрать"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>