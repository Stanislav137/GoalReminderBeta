<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llMainAllSections"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llThemeSport"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:text="Button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:onClick="startSportTheme"
                android:id="@+id/imThemeSport"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:text="GO"
                android:textSize="30sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_red"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/themeSportTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5sp"
                        android:layout_toRightOf="@+id/imThemeChoose"
                        android:text="СПОРТ"
                        android:textColor="@color/colorOrange"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/themeSportTitle"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10sp"
                        android:text="Данная тема поможема поможет вам добиться желаемыема поможет вам добиться желаемыема поможет вам добиться желаемыема поможет вам добиться желаемыема поможет вам добиться желаемыема поможет вам добиться желаемыема поможет вам добиться желаемыет вам добиться желаемых целей в сфере спорт."
                        android:textColor="@color/colorOrange"
                        android:textSize="15sp" />

                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrey">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llThemeScience"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="Button"
        android:background="@color/colorWhite"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:onClick="startScienceTheme"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:id="@+id/imThemeScience"
                android:text="GO"
                android:textSize="30sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_blue"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/themeScienceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5sp"
                        android:layout_toRightOf="@+id/imThemeChoose"
                        android:text="НАУКА"
                        android:textColor="@color/colorOrange"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Эта тема Эта тема поможет вам прочитать книгу либо выуЭта тема поможет вам прочитать книгу либо выуЭта тема поможет вам прочитать книгу либо выуЭта тема поможет вам прочитать книгу либо выуЭта тема поможет вам прочитать книгу либо выупоможет вам прочитать книгу либо выучить новый иностранный язык."
                        android:textColor="@color/colorOrange"
                        android:textSize="15sp"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/themeScienceTitle"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrey">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llElements"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="Button"
        android:background="@color/colorWhite"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:onClick="createOtherThemeGoal"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:id="@+id/imThemeOthers"
                android:text="GO"
                android:textSize="30sp"
                android:textColor="@color/colorWhite"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_green"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10sp"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/themeElementsTitle"
                android:textSize="30sp"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorOrange"
                android:layout_toRightOf="@+id/imThemeChoose"
                android:text="ДРУГОЕ"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOrange"
                android:layout_below="@+id/themeElementsTitle"
                android:layout_centerHorizontal="true"
                android:layout_margin="10sp"
                android:textSize="15sp"
                android:text="Здесь вы можетесь вы можете создать свою теесь вы можете создать свою теесь вы можете создать свою теесь вы можете создать свою теесь вы можете создать свою теесь вы можете создать свою теесь вы можете создать свою теесь вы можете создать свою тее создать свою тему."/>

                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
