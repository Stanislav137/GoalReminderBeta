<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorOrange">

        <ImageView
            android:id="@+id/arrowBack"
            android:layout_width="25sp"
            android:layout_height="15sp"
            android:layout_centerVertical="true"
            android:layout_margin="10sp"
            android:background="@drawable/arrow_goalwhite"
            android:rotation="90" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ngTitle"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="NEW GOAL"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/mainMenuBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10sp"
            android:text="MENU"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llCurrentWeight"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/position1"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="20sp"
                android:text="ТЕКУЩИЙ ВЕС:"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/position1"
                android:layout_width="1sp"
                android:layout_height="1sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp" />

            <Button
                android:id="@+id/sportMinusWeightCurrent"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_below="@+id/position1"
                android:textSize="25sp"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/btn_orange"
                android:text="-" />

            <Button
                android:id="@+id/sportPlusWeightCurrent"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_below="@+id/position1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/sportMinusWeightCurrent"
                android:background="@drawable/btn_orange"
                android:text="+"
                android:textColor="@color/colorWhite"
                android:textSize="25sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/sportCurrentWeight"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10sp"
                android:background="@drawable/btn_green"
                android:text="0"
                android:textColor="@color/colorWhite"
                android:textSize="30sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrey"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llGoalWeight"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/position2"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="20sp"
                android:text="ВАША ЦЕЛЬ:"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/position2"
                android:layout_width="1sp"
                android:layout_height="1sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp" />

            <Button
                android:id="@+id/sportMinusWeightGoal"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_below="@+id/position2"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/btn_orange"
                android:text="-"
                android:textColor="@color/colorWhite"
                android:textSize="25sp" />

            <Button
                android:id="@+id/sportPlusWeightGoal"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_below="@+id/position2"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/sportMinusWeightGoal"
                android:background="@drawable/btn_orange"
                android:text="+"
                android:textColor="@color/colorWhite"
                android:textSize="25sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/sportGoalWeight"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10sp"
                android:background="@drawable/btn_green"
                android:text="0"
                android:textColor="@color/colorWhite"
                android:textSize="30sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrey">
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:text="ВАША ЦЕЛЬ:"
            android:layout_marginTop="10sp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

            <TextView
                android:id="@+id/fromId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_above="@+id/position3"
                android:text="ОТ"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sportDateFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.00.0000"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@+id/fromId"
                android:layout_above="@+id/position3"
                android:textSize="20sp"
                android:layout_marginLeft="30sp"
                android:onClick="pickDateFrom" />

            <ImageView
                android:id="@+id/position3"
                android:layout_width="1sp"
                android:layout_height="1sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp" />

            <TextView
                android:id="@+id/toId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/position3"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="15sp"
                android:text="ДО"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/position3"
                android:layout_marginLeft="30sp"
                android:layout_toRightOf="@+id/fromId"
                android:text="00.00.0000"
                android:layout_marginTop="15sp"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:id="@+id/sportDateTo"
                android:onClick="pickDateTo"/>



    </RelativeLayout>

    <Button
        android:id="@+id/sportSaveGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange"
        android:padding="15sp"
        android:text="SAVE GOAL"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:onClick="saveGoal"
        />

</LinearLayout>