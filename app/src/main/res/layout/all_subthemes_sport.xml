<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.goalreminderbeta.sa.goalreminderbeta.ChosenTheme">

    <LinearLayout
        android:id="@+id/subWeight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="Button"
        android:background="@color/colorWhite"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/weightCorrectionGoal"
                android:background="@color/colorBlack"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="5sp"
                android:onClick="createWeightCorrectionGoal"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/themeSportTitle"
                android:textSize="35sp"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorOrange"
                android:layout_toRightOf="@+id/imThemeChoose"
                android:text="ВЕС"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOrange"
                android:layout_below="@+id/themeSportTitle"
                android:layout_centerHorizontal="true"
                android:layout_margin="15sp"
                android:text="Это тема позволит помочь вам достичь желаемого веса."/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/subRun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:text="Button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/imThemeScience"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="5sp"
                android:background="@color/colorBlack" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/themeScienceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@+id/imThemeChoose"
                android:text="БЕГ"
                android:textColor="@color/colorOrange"
                android:textSize="35sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/themeScienceTitle"
                android:layout_centerHorizontal="true"
                android:layout_margin="15sp"
                android:text="Это тема позволит вам достичь желаемых результатов в беге на время на короткие дистанции либо на длинные."
                android:textColor="@color/colorOrange" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/subElements"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="Button"
        android:background="@color/colorWhite"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imThemeElements"
                android:background="@color/colorBlack"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="5sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/themeElementsTitle"
                android:textSize="35sp"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorOrange"
                android:layout_toRightOf="@+id/imThemeChoose"
                android:text="ЕЛЕМЕНТЫ"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOrange"
                android:layout_below="@+id/themeElementsTitle"
                android:layout_centerHorizontal="true"
                android:layout_margin="15sp"
                android:text="Данная тема поможет вам в выполнении любого елемента."/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/subRepeat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="Button"
        android:background="@color/colorWhite"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imThemeHabits"
                android:background="@color/colorBlack"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="5sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/themeHabitsTitle"
                android:textSize="35sp"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorOrange"
                android:layout_toRightOf="@+id/imThemeChoose"
                android:text="ПОВТОРЕНИЯ"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOrange"
                android:layout_below="@+id/themeHabitsTitle"
                android:layout_centerHorizontal="true"
                android:layout_margin="15sp"
                android:text="Тема поможет вам набрать желаемого количества повторений на упражнении."/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
