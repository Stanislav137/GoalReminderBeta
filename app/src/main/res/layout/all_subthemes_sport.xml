<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorOrange">

        <ImageView
            android:id="@+id/arrowBack"
            android:onClick="backToPrevActivity"
            android:layout_width="25sp"
            android:layout_height="15sp"
            android:layout_centerVertical="true"
            android:layout_margin="10sp"
            android:background="@drawable/arrow_goalwhite"
            android:rotation="90" />

        <TextView
            android:id="@+id/ngTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="ВАБЕРИТЕ КАТЕГОРИЮ"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/weightCorrectionGoal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/colorWhite"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:onClick="createWeightCorrectionGoal"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:id="@+id/imThemeWeight"
                android:text="@string/chosen"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_red"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/themeSportTitle"
                        android:textSize="28sp"
                        android:layout_marginTop="5sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorOrange"
                        android:layout_toRightOf="@+id/imThemeChoose"
                        android:text="ВЕС"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorOrange"
                        android:layout_below="@+id/themeSportTitle"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10sp"
                        android:textSize="15sp"
                        android:text="@string/description_category_weight"/>

                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrey">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/subRun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:text="Button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:onClick="createRunCorrectionGoal"
                android:id="@+id/imThemeRun"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:text="@string/chosen"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_red"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/themeScienceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5sp"
                        android:layout_toRightOf="@+id/imThemeChoose"
                        android:text="БЕГ"
                        android:textColor="@color/colorOrange"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_margin="10sp"
                        android:text="Это темаа позволит помочь вама позволит помочь вама позволит помочь вама позволит помочь вама позволит помочь вам позволит вам достичь желаемых результатов в беге на время на короткие дистанции либо на длинные."
                        android:textColor="@color/colorOrange"
                        android:layout_below="@+id/themeScienceTitle"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrey">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/subElements"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="Button"
        android:background="@color/colorWhite"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:onClick="createElementCorrectionGoal"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:id="@+id/imThemeElements"
                android:text="@string/chosen"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_red"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/themeElementsTitle"
                        android:textSize="28sp"
                        android:layout_marginTop="5sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorOrange"
                        android:layout_toRightOf="@+id/imThemeChoose"
                        android:text="ЭЛЕМЕНТЫ"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorOrange"
                        android:textSize="15sp"
                        android:text="Данная тема а позволит помочь вама позволит помочь вама позволит помочь вама позволит помочь вама позволит помочь вама позволит помочь вама позволит помочь вама позволит помочь вама позволит помочь вама позволит помочь вампоможет вам в выполнении любого елемента."
                        android:layout_margin="10dp"
                        android:layout_below="@+id/themeElementsTitle"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrey">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="Button"
        android:background="@color/colorWhite"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:onClick="createRepeatsCorrectionGoal"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:id="@+id/imThemeRepeats"
                android:text="@string/chosen"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_red"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10sp"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/themeHabitsTitle"
                        android:textSize="28sp"
                        android:layout_marginTop="5sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorOrange"
                        android:layout_toRightOf="@+id/imThemeChoose"
                        android:text="ПОВТОРЕНИЯ"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorOrange"
                        android:textSize="15sp"
                        android:layout_below="@+id/themeHabitsTitle"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10sp"
                        android:text="Тема поможет вама позволит помочь вама позволит помочь вама позволит помочь вама позволит помочь вама позволит помочь вам набрать желаемого количества повторений на упражнении."/>

                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
