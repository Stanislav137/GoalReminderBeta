<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorGreen">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="backToPrevActivity"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/arrowBack"
                android:layout_width="25sp"
                android:layout_height="15sp"
                android:layout_margin="10sp"
                android:background="@drawable/arrow_goalwhite"
                android:rotation="90" />
        </LinearLayout>

        <TextView
            android:id="@+id/ngTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="ВЫБЕРИТЕ КАТЕГОРИЮ"
            android:textColor="@color/colorBackground"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/subElements"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/colorBackground"
        android:orientation="horizontal"
        android:text="Button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/btnCreateSkillsGoal"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_green"
                android:onClick="createSkillsGoal"
                android:text="@string/chosen"
                android:textColor="@color/colorBackground"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/themeElementsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="НАВЫКИ"
                        android:textColor="@color/colorBlack"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/themeElementsTitle"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:text="@string/description_category_skills"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp" />

                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrey">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/subRun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/colorBackground"
        android:orientation="horizontal"
        android:text="Button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/btnCreateMyGoal"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_green"
                android:onClick="createMyGoal"
                android:text="@string/chosen"
                android:textColor="@color/colorBackground"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10sp"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/themeScienceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5sp"
                        android:text="МОЯ ЦЕЛЬ"
                        android:textColor="@color/colorBlack"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/themeScienceTitle"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10sp"
                        android:text="@string/description_theme_other"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp" />

                </RelativeLayout>

            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
