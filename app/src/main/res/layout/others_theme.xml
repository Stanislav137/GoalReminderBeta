<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorOrange">

        <ImageView
            android:id="@+id/arrowBack"
            android:layout_width="25sp"
            android:layout_height="15sp"
            android:layout_centerVertical="true"
            android:layout_margin="10sp"
            android:background="@drawable/arrow_goalwhite"
            android:rotation="90" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ngTitle"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="NEW GOAL"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/mainMenuBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10sp"
            android:text="MENU"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llLvl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/chooseLvl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:text="CHOOSE LEVEL:"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/yourLvl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/position1"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="20sp"
                android:text="YOUR LEVEL:"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/currentLvlGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/position1"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="5sp"
                android:layout_toRightOf="@+id/yourLvl"
                android:text="0"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/maxLvl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/position1"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="20sp"
                android:layout_toRightOf="@+id/currentLvlGoal"
                android:text="MAX LEVEL:"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/maxlLvlGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/position1"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="5sp"
                android:layout_toRightOf="@+id/maxLvl"
                android:text="5"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/position1"
                android:layout_width="1sp"
                android:layout_height="1sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp" />

            <Button
                android:id="@+id/lvlOne"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_below="@+id/position1"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/btn_red"
                android:text="1"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <Button
                android:id="@+id/lvlTwo"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_below="@+id/position1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/lvlOne"
                android:background="@drawable/btn_lvl_two"
                android:text="2"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <Button
                android:id="@+id/lvlThree"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_below="@+id/position1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/lvlTwo"
                android:background="@drawable/btn_lvl_two"
                android:text="3"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <Button
                android:id="@+id/lvlFour"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_below="@+id/position1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/lvlThree"
                android:background="@drawable/lvl_four_btn"
                android:text="4"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <Button
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/btn_green"
                android:text="ON"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrey"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llNumberPages"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/position2"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="20sp"
                android:text="YOUR NUMBER OF REPETITIONS:"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/position2"
                android:layout_width="1sp"
                android:layout_height="1sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp" />

            <Button
                android:id="@+id/minusPage"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:textSize="25sp"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/position2"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/btn_orange"
                android:text="-" />

            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/addRep"
                android:layout_below="@+id/position2"
                android:textSize="25sp"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/minusPage"
                android:background="@drawable/btn_orange"
                android:text="+" />

            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_below="@+id/position2"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/addRep"
                android:background="@drawable/btn_orange"
                android:text="OK" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:id="@+id/currentWeightCircle"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_red"
                android:text="0"
                android:layout_marginTop="10sp"
                android:textColor="@color/colorWhite"
                android:textSize="30sp" />

            <Button
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:text="ON"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_green"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrey"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATE GOAL"
                android:id="@+id/titleDateGoal"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="20sp"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FROM"
                android:id="@+id/fromId"
                android:layout_marginLeft="20sp"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:layout_centerVertical="true"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sportDateFrom"
                android:enabled="false"
                android:textColor="@color/colorBlack"
                android:text="00.00.0000"
                android:layout_marginLeft="5sp"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/fromId"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TO"
                android:id="@+id/toId"
                android:layout_marginLeft="20sp"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:layout_marginTop="15sp"
                android:layout_below="@+id/fromId"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.00.0000"
                android:enabled="false"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="5sp"
                android:textSize="20sp"
                android:layout_below="@+id/sportDateFrom"
                android:layout_toRightOf="@+id/fromId"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:id="@+id/editCalendarCircle"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_red"
                android:text="EDIT"
                android:layout_marginTop="10sp"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15sp"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:background="@color/colorOrange"
        android:text="SAVE GOAL"/>

</LinearLayout>