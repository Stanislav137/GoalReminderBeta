<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/subWeight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:text="Button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:onClick="createBookCorrectionGoal"
                android:id="@+id/imThemeBook"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_red"
                android:text="GO"
                android:textColor="@color/colorWhite"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/themeSportTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5sp"
                        android:layout_toRightOf="@+id/imThemeChoose"
                        android:text="КНИГА"
                        android:textColor="@color/colorOrange"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/themeSportTitle"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10sp"
                        android:text="ДанДанная тема поможет прочитать книгу которую вы хоДанная тема поможет прочитать книгу которую вы хоДанная тема поможет прочитать книгу которую вы хоДанная тема поможет прочитать книгу которую вы хоДанная тема поможет прочитать книгу которую вы хоДанная тема поможет прочитать книгу которую вы хоДанная тема поможет прочитать книгу которую вы хоДанная тема поможет прочитать книгу которую вы хоДанная тема поможет прочитать книгу которую вы хоДанная тема поможет прочитать книгу которую вы хоная тема поможет прочитать книгу которую вы хотите."
                        android:textColor="@color/colorOrange"
                        android:textSize="15sp" />

                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrey">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/subRun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:text="Button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:onClick="createLanguageCorrectionGoal"
                android:id="@+id/imThemeLanguage"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_red"
                android:text="GO"
                android:textColor="@color/colorWhite"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10sp"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/themeScienceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5sp"
                        android:layout_toRightOf="@+id/imThemeChoose"
                        android:text="ЯЗЫКИ"
                        android:textColor="@color/colorOrange"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/themeScienceTitle"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:text="Эта тема поможЭта тема поможет вам выучить новыйЭта тема поможет вам выучить новыйЭта тема поможет вам выучить новыйЭта тема поможет вам выучить новыйЭта тема поможет вам выучить новыйЭта тема поможет вам выучить новыйЭта тема поможет вам выучить новыйЭта тема поможет вам выучить новыйЭта тема поможет вам выучить новыйЭта тема поможет вам выучить новыйЭта тема поможет вам выучить новыйЭта тема поможет вам выучить новыйет вам выучить новый иностранный язык до определенного уровня."
                        android:textColor="@color/colorOrange"
                        android:textSize="15sp" />

                </RelativeLayout>

            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
