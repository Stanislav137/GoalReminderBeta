<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/subWeight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/colorWhite"
        android:onClick="createBookCorrectionGoal"
        android:orientation="horizontal"
        android:text="Button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:id="@+id/imThemeBook"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="5sp"
                android:background="@drawable/run" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/themeSportTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@+id/imThemeChoose"
                android:text="КНИГА"
                android:textColor="@color/colorOrange"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/themeSportTitle"
                android:layout_centerHorizontal="true"
                android:layout_margin="15sp"
                android:textSize="15sp"
                android:text="Данная тема поможет прочитать книгу которую вы хотите."
                android:textColor="@color/colorOrange" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrey">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/subRun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:onClick="createLanguageCorrectionGoal"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:text="Button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/imThemeLanguage"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="5sp"
                android:background="@drawable/run" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/themeScienceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@+id/imThemeChoose"
                android:text="ЯЗЫКИ"
                android:textColor="@color/colorOrange"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/themeScienceTitle"
                android:layout_centerHorizontal="true"
                android:layout_margin="15sp"
                android:textSize="15sp"
                android:text="Эта тема поможет вам выучить новый иностранный язык до определенного уровня."
                android:textColor="@color/colorOrange" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
