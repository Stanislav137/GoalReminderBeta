<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/subWeight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="Button"
        android:onClick="createBookCorrectionGoal"
        android:background="@color/colorWhite"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBlack"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="5sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/themeSportTitle"
                android:textSize="35sp"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorOrange"
                android:layout_toRightOf="@+id/imThemeChoose"
                android:text="КНИГА"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOrange"
                android:layout_below="@+id/themeSportTitle"
                android:layout_centerHorizontal="true"
                android:layout_margin="15sp"
                android:text="Данная тема поможет прочитать книгу которую вы хотите."/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/subRun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:text="Button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/imThemeScience"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="5sp"
                android:background="@color/colorBlack" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/themeScienceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@+id/imThemeChoose"
                android:text="ЯЗЫКИ"
                android:textColor="@color/colorOrange"
                android:textSize="35sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/themeScienceTitle"
                android:layout_centerHorizontal="true"
                android:layout_margin="15sp"
                android:text="Эта тема поможет вам выучить новый иностранный язык до определенного уровня."
                android:textColor="@color/colorOrange" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
