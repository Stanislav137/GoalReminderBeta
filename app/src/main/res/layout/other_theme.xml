<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorOrange">

        <ImageView
            android:id="@+id/arrowBack"
            android:onClick="backToPrevActivity"
            android:layout_width="25sp"
            android:layout_height="15sp"
            android:layout_centerVertical="true"
            android:layout_margin="10sp"
            android:background="@drawable/arrow_goalwhite"
            android:rotation="90" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ngTitle"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="КАТЕГОРИЯ ДРУГЯ ТЕМА"
            android:textColor="@color/colorBackground"
            android:textSize="18sp" />

        <TextView
            android:onClick="backToHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10sp"
            android:text="MENU"
            android:textColor="@color/colorBackground"
            android:textSize="15sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/sportSaveGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange"
        android:layout_alignParentBottom="true"
        android:text="СОХРАНИТЬ ЦЕЛЬ"
        android:textColor="@color/colorBackground"
        android:textSize="18sp"
        android:onClick="saveGoal"
        />

</RelativeLayout>