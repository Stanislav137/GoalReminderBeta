<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llMainAllSections"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@color/colorBlack">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="backToPrevActivity"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/arrowBack"
                android:layout_width="30sp"
                android:layout_height="20sp"
                android:layout_margin="10sp"
                android:background="@drawable/arrow_goalwhite"
                android:rotation="90" />
        </LinearLayout>

        <TextView
            android:id="@+id/ngTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/all_themes_select_themes"
            android:textColor="@color/colorBackground"
            android:textSize="22sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llThemeSport"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/colorBackground"
        android:orientation="horizontal"
        android:text="Button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:onClick="startSportTheme"
                android:id="@+id/imThemeSport"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:text="@string/chosen"
                android:textSize="16sp"
                android:textColor="@color/colorBackground"
                android:background="@drawable/btn_red"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/themeSportTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5sp"
                        android:text="@string/all_themes_sport"
                        android:textColor="@color/colorBlack"
                        android:textSize="29sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/themeSportTitle"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10sp"
                        android:text="@string/description_theme_sport"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />
                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrey">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llThemeScience"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="Button"
        android:background="@color/colorBackground"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:onClick="startScienceTheme"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:id="@+id/imThemeScience"
                android:text="@string/chosen"
                android:textSize="16sp"
                android:textColor="@color/colorBackground"
                android:background="@drawable/btn_blue"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/themeScienceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5sp"
                        android:text="@string/all_themes_science"
                        android:textColor="@color/colorBlack"
                        android:textSize="29sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description_theme_science"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/themeScienceTitle"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrey">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llElements"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/colorBackground"
        android:orientation="horizontal"
        android:text="Button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/btnCreateSkillsGoal"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_green"
                android:onClick="createSkillsGoal"
                android:text="@string/chosen"
                android:textColor="@color/colorBackground"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10sp"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/themeElementsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5sp"
                        android:text="@string/all_themes_skills"
                        android:textColor="@color/colorBlack"
                        android:textSize="29sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/themeElementsTitle"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10sp"
                        android:text="@string/description_category_skills"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />

                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
