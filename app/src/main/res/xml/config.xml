<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="notification"
        android:defaultValue="true"
        android:title="Notification on/off">
    </SwitchPreference>
    <SwitchPreference
        android:key="sound"
        android:defaultValue="true"
        android:title="Sound on/off">
    </SwitchPreference>
    <SwitchPreference
        android:key="vibration"
        android:defaultValue="true"
        android:title="Vibration on/off">
    </SwitchPreference>

    <ListPreference
        android:key="interval"
        android:entries="@array/frequency"
        android:entryValues="@array/frequencyValues"
        android:title="Frequency"
        android:summary="Choose how often yo wish to receive notifications"
        ></ListPreference>
   <PreferenceScreen
       android:key="days"
       android:title="Week-days"
       android:summary="Choose days when you don't want to receive notifications">
       <CheckBoxPreference
           android:key="day1"
           android:title="Monday">
       </CheckBoxPreference>
       <CheckBoxPreference
           android:key="day2"
           android:title="Tuesday">
       </CheckBoxPreference>
       <CheckBoxPreference
           android:key="day3"
           android:title="Wednesday">
       </CheckBoxPreference>
       <CheckBoxPreference
           android:key="day4"
           android:title="Thursday">
       </CheckBoxPreference>
       <CheckBoxPreference
           android:key="day5"
           android:title="Friday">
       </CheckBoxPreference>
       <CheckBoxPreference
           android:key="day6"
           android:title="Saturday">
       </CheckBoxPreference>
       <CheckBoxPreference
           android:key="day7"
           android:title="Sunday">
       </CheckBoxPreference>
   </PreferenceScreen>
</PreferenceScreen>