<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/clr_sport">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="backToPrevActivity">

            <ImageView
                android:id="@+id/arrowBack"
                android:layout_width="25sp"
                android:layout_height="15sp"
                android:layout_margin="10sp"
                android:background="@drawable/arrow_goalwhite"
                android:rotation="90" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ngTitle"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="КАТЕГОРИЯ ПОВТОРЕНИЯ"
            android:textColor="@color/colorBackground"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginRight="5sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/menu_white"
            android:onClick="backToHome" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="editDescription">

            <TextView
                android:id="@+id/descriptionGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10sp"
                android:text="@string/repetitions_description_exercise"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imgReadyDescription"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_alignBottom="@+id/descriptionGoal"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8sp"
                android:layout_toRightOf="@+id/descriptionGoal"
                android:background="@drawable/empty" />

            <ImageView
                android:id="@+id/showWarningId"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_alignParentRight="true"
                android:layout_margin="10sp"
                android:background="@drawable/warning"
                android:onClick="showWarning" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrey"></LinearLayout>

    <LinearLayout
        android:id="@+id/llCurrentRepeats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:text="@string/repetitions_number_repetitions"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/position1"
                android:layout_width="1sp"
                android:layout_height="1sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10sp" />

            <Button
                android:id="@+id/sportMinusRepeatCurrent"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_below="@+id/position1"
                android:layout_marginLeft="10sp"
                android:background="@drawable/btn_red"
                android:text="-"
                android:textColor="@color/colorBackground"
                android:textSize="25sp" />

            <Button
                android:id="@+id/sportPlusRepeatCurrent"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_below="@+id/position1"
                android:layout_marginLeft="8sp"
                android:layout_toRightOf="@+id/sportMinusRepeatCurrent"
                android:background="@drawable/btn_red"
                android:text="+"
                android:textColor="@color/colorBackground"
                android:textSize="25sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/sportPlusRepeatCurrent"
                android:layout_alignTop="@+id/sportPlusRepeatCurrent"
                android:layout_marginLeft="15sp"
                android:layout_toRightOf="@+id/sportPlusRepeatCurrent">

                <Button
                    android:id="@+id/addX10CurrentRepeat"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_red"
                    android:text="+10"
                    android:textColor="@color/colorBackground"
                    android:textSize="15sp" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/currentRepeatsResult"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10sp"
                android:background="@drawable/btn_green"
                android:onClick="setCurrentRepeats"
                android:text="0"
                android:textColor="@color/colorBackground"
                android:textSize="30sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrey"></LinearLayout>

    <LinearLayout
        android:id="@+id/llGoalRepeats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:text="@string/repetitions_desired_result"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/position2"
                android:layout_width="1sp"
                android:layout_height="1sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10sp" />

            <Button
                android:id="@+id/sportMinusRepeatGoal"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_below="@+id/position2"
                android:layout_marginLeft="10sp"
                android:background="@drawable/btn_red"
                android:text="-"
                android:textColor="@color/colorBackground"
                android:textSize="25sp" />

            <Button
                android:id="@+id/sportPlusRepeatGoal"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_below="@+id/position2"
                android:layout_marginLeft="8sp"
                android:layout_toRightOf="@+id/sportMinusRepeatGoal"
                android:background="@drawable/btn_red"
                android:text="+"
                android:textColor="@color/colorBackground"
                android:textSize="25sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/sportPlusRepeatGoal"
                android:layout_alignTop="@+id/sportPlusRepeatGoal"
                android:layout_marginLeft="15sp"
                android:layout_toRightOf="@+id/sportPlusRepeatGoal">

                <Button
                    android:id="@+id/addX10GoalRepeat"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_red"
                    android:text="+10"
                    android:textColor="@color/colorBackground"
                    android:textSize="15sp" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/goalRepeatsResult"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10sp"
                android:background="@drawable/btn_green"
                android:onClick="setGoalRepeats"
                android:text="0"
                android:textColor="@color/colorBackground"
                android:textSize="30sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrey"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="@string/repetitions_goal_date"
            android:layout_marginTop="10sp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fromId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_centerVertical="true"
            android:text="ОТ"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/repeatsDateFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/fromId"
            android:layout_alignBottom="@+id/fromId"
            android:layout_alignLeft="@+id/repeatsDateTo"
            android:layout_alignStart="@+id/repeatsDateTo"
            android:text="00.00.0000"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/position3"
            android:layout_width="1sp"
            android:layout_height="1sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp" />

        <TextView
            android:id="@+id/toId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/position3"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20sp"
            android:text="@string/repetitions_goal_date_before"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/position3"
            android:layout_marginLeft="30sp"
            android:layout_toRightOf="@+id/fromId"
            android:text="00.00.0000"
            android:layout_marginTop="20sp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:id="@+id/repeatsDateTo"
            android:onClick="pickDateTo"/>
    </RelativeLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sport_save_goal"
        android:onClick="saveGoal"
        android:padding="15sp"
        android:text="@string/save_goal"
        android:textColor="@color/colorBackground"
        android:textSize="18sp" />

</LinearLayout>